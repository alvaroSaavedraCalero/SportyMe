<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/zonaIcono"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imagenLogoPrincipal"
                android:layout_width="200dp"
                android:layout_height="133dp"
                android:contentDescription="@string/descripcionLogo"
                app:srcCompat="@drawable/sportyme_logo" />
        </TableRow>

        <TableRow
            android:id="@+id/zonaArticulos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:id="@+id/fila1Articulos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imagenFila1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="@string/descripcionImagenFila1"
                        app:srcCompat="@android:drawable/divider_horizontal_bright" />

                    <TextView
                        android:id="@+id/descripcionFila1"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:text="@string/descripcionArticulo" />

                    <Button
                        android:id="@+id/botonAniadirFila1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/botonAniadir" />

                    <EditText
                        android:id="@+id/numeroArticulosFila1"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:text="@string/cantidadArticulos" />
                </TableRow>

                <TableRow
                    android:id="@+id/fila2Articulos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:id="@+id/fila3Articulos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:id="@+id/fila4Articulos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </TableRow>

        <TableRow
            android:id="@+id/zonaBotonCompra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/botonRealizarCompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/botonComprar" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>